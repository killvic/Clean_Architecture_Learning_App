<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">

    <TextView
        android:id="@+id/tvGetData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="No Data"
        android:layout_marginTop="64dp"
        android:layout_marginHorizontal="24dp"/>

    <Button
        android:id="@+id/btGetData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGetData"
        android:text="Get Data"
        android:layout_margin="24dp"/>

    <EditText
        android:id="@+id/etDataEnter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Data Here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btGetData"
        android:layout_margin="24dp"/>

    <Button
        android:id="@+id/btSaveData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDataEnter"
        android:layout_margin="24dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>
